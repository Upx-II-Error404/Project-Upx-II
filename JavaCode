import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;

class Pergunta {
    private String enunciado;
    private String resposta;
    private String opcaoA;
    private String opcaoB;
    private String opcaoC;
    private String opcaoD;

    public Pergunta(String enunciado, String resposta, String opcaoA, String opcaoB, String opcaoC, String opcaoD) {
        this.enunciado = enunciado;
        this.resposta = resposta;
        this.opcaoA = opcaoA;
        this.opcaoB = opcaoB;
        this.opcaoC = opcaoC;
        this.opcaoD = opcaoD;
    }

    public String getEnunciado() {
        return enunciado;
    }

    public String getResposta() {
        return resposta;
    }

    public String getOpcaoA() {
        return opcaoA;
    }

    public String getOpcaoB() {
        return opcaoB;
    }

    public String getOpcaoC() {
        return opcaoC;
    }

    public String getOpcaoD() {
        return opcaoD;
    }
}

class SistemaPerguntas {
    private ArrayList<Pergunta> perguntas;

    public SistemaPerguntas() {
        this.perguntas = new ArrayList<>();
        // Adicione aqui as perguntas sobre porcentagens e regra de três
        perguntas.add(new Pergunta("Qual é 20% de 50?",
                                   "D", "10", "20", "25", "30"));
        perguntas.add(new Pergunta("Se 4 máquinas produzem 100 peças em 5 horas, quantas peças 8 máquinas produzirão em 6 horas?",
                                   "A", "128", "150", "160", "200"));
    }

    public Pergunta getPerguntaAleatoria() {
        Random random = new Random();
        int indice = random.nextInt(perguntas.size());
        return perguntas.get(indice);
    }
}

public class Main {
    public static void main(String[] args) {
        SistemaPerguntas sistema = new SistemaPerguntas();
        Scanner scanner = new Scanner(System.in);

        System.out.println("Bem-vindo ao Quiz de Matemática!");
        System.out.println("Responda às seguintes perguntas: \n");

        int pontuacao = 0;

        for (int i = 0; i < 2; i++) {
            Pergunta pergunta = sistema.getPerguntaAleatoria();
            System.out.println(pergunta.getEnunciado());
            System.out.println("A) " + pergunta.getOpcaoA());
            System.out.println("B) " + pergunta.getOpcaoB());
            System.out.println("C) " + pergunta.getOpcaoC());
            System.out.println("D) " + pergunta.getOpcaoD());
            System.out.print("Escolha a opção correta (A, B, C ou D): ");

            String respostaUsuario = scanner.nextLine().toUpperCase();
            if (respostaUsuario.equals(pergunta.getResposta())) {
                System.out.println("Resposta correta!");
                pontuacao++;
            } else {
                System.out.println("Resposta incorreta. A resposta correta é: " + pergunta.getResposta());
            }
            System.out.println();
        }

        System.out.println("Pontuação final: " + pontuacao + " de 2");
    }
}
